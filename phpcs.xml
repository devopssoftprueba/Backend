<?xml version="1.0"?>
<ruleset name="PHPDocOnly">
    <description>
        validacion solo de la documentacion
    </description>

    <!-- Excluir vendor y otras carpetas innecesarias -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- IMPORTANTE: Desactivar TODAS las reglas por defecto -->
    <rule ref="PSR12">
        <exclude name="PSR12" />
    </rule>
    <rule ref="PSR1">
        <exclude name="PSR1" />
    </rule>
    <rule ref="PSR2">
        <exclude name="PSR2" />
    </rule>
    <rule ref="PEAR">
        <exclude name="PEAR" />
    </rule>
    <rule ref="Squiz">
        <exclude name="Squiz" />
    </rule>
    <rule ref="Generic">
        <exclude name="Generic" />
    </rule>
    <rule ref="Zend">
        <exclude name="Zend" />
    </rule>

    <!-- Activar SOLO las reglas específicas de documentación necesarias -->
    <rule ref="Generic.Commenting.DocComment.MissingShort">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.DocComment.SpacingBeforeTags">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.DocComment.TagValueIndent">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.DocComment.NonParamGroup">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.DocComment.ParamNotFirst">
        <severity>5</severity>
    </rule>

    <!-- Reglas específicas para docblocks de funciones -->
    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamComment">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamType">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamName">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ParamCommentFullStop">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ParamCommentNotCapital">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.EmptyThrows">
        <severity>5</severity>
    </rule>

    <!-- Estas son las reglas que QUEREMOS excluir específicamente -->
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamType">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingReturnType">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.IncorrectParamVarName">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.TypeHintMissing">
        <severity>0</severity>
    </rule>

    <!-- Reglas para docblocks de clases -->
    <rule ref="Squiz.Commenting.ClassComment.Missing">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.ClassComment.SpacingAfter">
        <severity>5</severity>
    </rule>
    <rule ref="Squiz.Commenting.ClassComment.TagNotAllowed">
        <severity>0</severity>
    </rule>

    <!-- Configuración general -->
    <arg name="basepath" value="." />
    <config name="php_version" value="80200" />
    <arg name="extensions" value="php" />
    <ini name="memory_limit" value="128M" />
</ruleset>