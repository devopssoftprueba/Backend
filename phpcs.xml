<?xml version="1.0"?>
<ruleset name="ModernPHPStandard">
    <description>Modern PHP_CodeSniffer ruleset for PHP 8+</description>

    <!-- Reglas principales -->
    <rule ref="PSR12" />
    <rule ref="Squiz.Commenting.FunctionComment" />
    <rule ref="Squiz.Commenting.VariableComment" />
    <rule ref="Generic.Commenting.DocComment" />

    <!-- Desactivar reglas completas que causan conflictos con tu plantilla -->
    <rule ref="Squiz.Commenting.ClassComment">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.NamingConventions.ValidFunctionName">
        <severity>0</severity>
    </rule>

    <!-- Espaciado de funciones -->
    <rule ref="Squiz.Functions">
        <exclude name="Squiz.Functions.FunctionDeclaration.SpaceBeforeOpenParenthesis" />
        <exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing" />
    </rule>

    <!-- Desactivar reglas antiguas u obsoletas -->
    <exclude name="Generic.Files.LineEndings.InvalidEOLChar" />
    <exclude name="Squiz.PHP.LowercasePHPFunctions" />
    <exclude name="Generic.Files.LineLength.TooLong" />
    <exclude name="Squiz.NamingConventions.ValidVariableName.PrivateNoUnderscore" />
    <exclude name="Squiz.Classes.ClassFileName.NoMatch" />
    <exclude name="Squiz.Commenting.FileComment.Missing" />
    <exclude name="Generic.Files.OneClassPerFile.MultipleFound" />
    <exclude name="Generic.Files.OneClassPerFile.ClassesPerFile" />

    <!-- Límite de longitud de línea flexible -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="9999" />
            <property name="absoluteLineLimit" value="0" />
        </properties>
    </rule>

    <!-- Configuración -->
    <arg name="basepath" value="."/>
    <config name="php_version" value="80200"/>
    <arg name="tab-width" value="4"/>
</ruleset>
