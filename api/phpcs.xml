<?xml version="1.0"?>
<ruleset name="DocStandard">
    <description>Reglas documentación phpdocs</description>

    <!-- Excluir carpetas que no necesitan validación -->
    <exclude-pattern>*/tests/*</exclude-pattern>      <!-- Ignora archivos en carpeta tests -->
    <exclude-pattern>*/database/*</exclude-pattern>   <!-- Ignora archivos en carpeta database -->
    <exclude-pattern>*/config/*</exclude-pattern>     <!-- Ignora archivos en carpeta config -->
    <exclude-pattern>*/routes/*</exclude-pattern>     <!-- Ignora archivos en carpeta routes -->
    <exclude-pattern>*/vendor/*</exclude-pattern>     <!-- Ignora archivos en carpeta vendor -->

    <!-- Desactiva TODAS las reglas por defecto -->
    <rule ref="Generic">
        <exclude name="Generic"/>                     <!-- Excluye todas las reglas Generic -->
    </rule>
    <rule ref="PSR2">
        <exclude name="PSR2"/>                        <!-- Excluye todas las reglas PSR2 -->
    </rule>
    <rule ref="Squiz">
        <exclude name="Squiz"/>                       <!-- Excluye todas las reglas Squiz -->
    </rule>

    <!-- Activa solo regla básica de documentación -->
    <rule ref="Generic.Commenting.DocComment"/>       <!-- Valida formato básico de DocBlocks -->

    <!-- Configuración específica para documentación de funciones -->
    <rule ref="Squiz.Commenting.FunctionComment">     <!-- Reglas para documentación de funciones -->

        <!-- No requiere tipos en @return -->
        <exclude name="Squiz.Commenting.FunctionComment.MissingReturnType"/>
        <!-- No valida espacios después de la función -->
        <exclude name="Squiz.Commenting.FunctionComment.SpacingAfter"/>

        <properties>
            <property name="skipIfClosure" value="true"/>  <!-- Ignora funciones anónimas -->
        </properties>
    </rule>

    <!-- Configuración para documentación de clases -->
    <rule ref="Squiz.Commenting.ClassComment">       <!-- Reglas para documentación de clases -->
        <exclude name="Squiz.Commenting.ClassComment.TagNotAllowed"/>  <!-- Permite tags personalizados -->
    </rule>

    <!-- Configuración general de PHPCS -->
    <arg name="basepath" value="."/>                <!-- Define directorio base -->
    <arg name="extensions" value="php"/>            <!-- Solo analiza archivos .php -->
</ruleset>