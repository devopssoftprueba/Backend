<?xml version="1.0"?>
<ruleset name="DocStandard">
    <description>Reglas documentación phpdocs</description>

    <!-- Excluir carpetas -->
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/database/*</exclude-pattern>
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/routes/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Reglas de documentación -->
    <rule ref="Generic.Commenting.DocComment"/>

    <rule ref="Squiz.Commenting.FunctionCommentThrowTag">
        <properties>
            <property name="skipIfClosure" value="true"/>
        </properties>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude name="Squiz.Commenting.FunctionComment.MissingReturnType"/>
        <exclude name="Squiz.Commenting.FunctionComment.SpacingAfter"/>
    </rule>

    <rule ref="Squiz.Commenting.ClassComment">
        <exclude name="Squiz.Commenting.ClassComment.TagNotAllowed"/>
    </rule>

    <!-- Configuración de salida -->
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg value="s"/>
    <arg name="report-width" value="120"/>
    <arg name="report" value="full"/>
    <arg value="np"/>
</ruleset>