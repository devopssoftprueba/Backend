#!/bin/sh

echo "üîç Ejecutando validaci√≥n PHPDoc con PHPCS..."

# Obtener archivos PHP modificados (comparando contra el √∫ltimo commit en remoto)
FILES=$(git diff --cached --name-only origin/$(git rev-parse --abbrev-ref HEAD) | grep -E '\.php$')

# Si no hay archivos PHP modificados, no hacemos nada
if [ -z "$FILES" ]; then
  echo "‚úÖ No hay archivos PHP modificados para validar."
  exit 0
fi

# Flag de errores
ERROR=0

# Verificar cada archivo PHP modificado que realmente exista
for FILE in $FILES; do
  if [ -f "$FILE" ]; then
    echo "üìÇ Validando $FILE ..."
    vendor/bin/phpcs --sniffs=Squiz.Commenting.FunctionComment,Squiz.Commenting.VariableComment,Generic.Commenting.DocComment "$FILE"
    if [ $? -ne 0 ]; then
      ERROR=1
    fi
  else
    echo "‚ö†Ô∏è Archivo omitido (no existe): $FILE"
  fi
done

# Si hay errores, cancelar el push
if [ $ERROR -ne 0 ]; then
  echo "‚ùå Se encontraron errores en la documentaci√≥n PHPDoc. Corrige antes de hacer push."
  exit 1
fi

echo "‚úÖ Validaci√≥n exitosa. Continuando con el push."
exit 0
