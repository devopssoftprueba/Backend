{
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "squizlabs/php_codesniffer": "^3.12"
    },
    "config": {
        "platform": {
            "php": "8.2.12"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "pre-commit": "php -r \"file_exists('.git/hooks/pre-commit') || touch('.git/hooks/pre-commit'); chmod .git/hooks/pre-commit\"",
        "pre-push": "php -r \"file_exists('.git/hooks/pre-push') || touch('.git/hooks/pre-push'); chmod .git/hooks/pre-push\""
    }
}
